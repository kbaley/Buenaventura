@using ApexCharts
@using ChartOptions = Buenaventura.Client.Services.ChartOptions
@if (IsLoading)
{
    <MudGrid>
        <MudItem xs="12">
            <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="20px" Width="30%"/>
        </MudItem>
        <MudItem xs="2">
            <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="300px" Width="100%"/>
        </MudItem>
        <MudItem xs="10">
            <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="300px" Width="100%"/>
        </MudItem>
        <MudItem xs="2"/>
        <MudItem xs="10">
            <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="20px" Width="100%"/>
        </MudItem>
    </MudGrid>
}
else
{
    <ApexChart TItem="ReportDataPoint"
               Options="investmentsChartOptions"
               Title="@Title">
        <ApexPointSeries
            TItem="ReportDataPoint"
            Items="ChartData"
            Name="Investment Value"
            XValue="@(e => e.Label)"
            YValue="@(e => e.Value)"
            SeriesType="SeriesType.Line"/>
    </ApexChart>
}

@code {

    [Parameter] public bool IsLoading { get; set; } = true;
    [Parameter] public IEnumerable<ReportDataPoint> ChartData { get; set; }= [];
    [Parameter] public string Title { get; set; } = "";

    private ApexChartOptions<ReportDataPoint> investmentsChartOptions = ChartOptions.GetDefaultOptions<ReportDataPoint>();

}